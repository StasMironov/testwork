{% if button.non_interactive %}
	<div class="button button--non-interactive{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button--{{ button.size }}{% endif %}{% if button.theme %} button--{{ button.theme }}{% endif %}{% if button.background %} button--bg-{{ button.background }}{% endif %}{{ button.fit ? " button--fit" : "" }}{{ button.mobFit ? " button--mob-fit" : "" }}{{ button.loading ? "is-loading" : "" }}">
		{% if button.text %}
			<span class="button__text text-small">{{ button.text }}</span>
		{% endif %}
	</div>
{% else %}
	{% if button.href %}
		<a href="{{ button.href }}"
		   class="button{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button--{{ button.size }}{% endif %}{% if button.theme %} button--{{ button.theme }}{% endif %}{% if button.background %} button--bg-{{ button.background }}{% endif %}{% if button.disabled %} button--disabled{% endif %}{{ button.fit ? " button--fit" : "" }}{{ button.mobFit ? " button--mob-fit" : "" }}{{ button.loading ? "is-loading" : "" }}"{% if button.attr %} {{ button.attr }}{% endif %}{% if button.title %} title="{{ button.title }}"{% endif %}>
			{% if button.text %}
				<span class="button__text text-small">{{ button.text }}</span>
			{% endif %}
		</a>
	{% else %}
		<button type="{{ button.type?: 'button' }}"
				class="button {% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button--{{ button.size }}{% endif %}{% if button.theme %} button--{{ button.theme }}{% endif %}{% if button.background %} button--bg-{{ button.background }}{% endif %}{{ button.fit ? " button--fit" : "" }}{{ button.mobFit ? " button--mob-fit" : "" }}{{ button.loading ? "is-loading" : "" }}"{% if button.attr %} {{ button.attr }}{% endif %}{% if button.title %} title="{{ button.title }}"{% endif %}{% if button.disabled %} disabled{% endif %}>
			{% if button.text %}
				<span class="button__text">{{ button.text }}</span>
			{% endif %}
		</button>
	{% endif %}
{% endif %}

