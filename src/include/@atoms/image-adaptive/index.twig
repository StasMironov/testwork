{% if image.lazy %}
	<picture class="image-adaptive">
		{% if image.mob %}
			<source media="(max-width: {{ breakpoints.md - 1 }}px)"
					srcset="{{ placeholder?: 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' }}"
					data-srcset="{% for item in image.mob.srcset %}{{ item.src }} {{ item.scale }}x{% if loop.index < image.mob.srcset|length %}, {% endif %}{% endfor %}">
		{% endif %}
		{% if image.tab %}
			<source media="(max-width: {{ breakpoints.lg - 1 }}px)"
					srcset="{{ placeholder?: 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' }}"
					data-srcset="{% for item in image.tab.srcset %}{{ item.src }} {{ item.scale }}x{% if loop.index < image.tab.srcset|length %}, {% endif %}{% endfor %}">
		{% endif %}
		<img class="image is-lazy{% if image.class %} {{ image.class }}{% endif %}{{ image.fit ? ' is-cover' : '' }}{{ image.fill ? ' fill' : '' }}"
			src="{{ placeholder?: 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' }}"
			data-src="{{ image.src?: 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' }}" alt="{{ image.alt }}"
			{% if image.srcset %} data-srcset="{% for item in image.srcset %}{{ item.src }} {{ item.scale }}x{% if loop.index < image.srcset|length %}, {% endif %}{% endfor %}" {% endif %}
			{% if image.position %} data-position="{{ image.position }}"{% endif %}>
	</picture>
{% else %}
	<picture class="image-adaptive">
		{% if image.mob %}
			<source media="(max-width: {{ breakpoints.md - 1 }}px)"
					srcset="{% for item in image.mob.srcset %}{{ item.src }} {{ item.scale }}x{% if loop.index < image.mob.srcset|length %}, {% endif %}{% endfor %}">
		{% endif %}
		{% if image.tab %}
			<source media="(max-width: {{ breakpoints.lg - 1 }}px)"
					srcset="{% for item in image.tab.srcset %}{{ item.src }} {{ item.scale }}x{% if loop.index < image.tab.srcset|length %}, {% endif %}{% endfor %}">
		{% endif %}
		<img class="image{% if image.class %} {{ image.class }}{% endif %}{{ image.fit ? ' is-cover' : '' }}{{ image.fill ? ' fill' : '' }}"
			src="{{ image.src?: 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' }}" alt="{{ image.alt }}"
			{% if image.srcset %} srcset="{% for item in image.srcset %}{{ item.src }} {{ item.scale }}x{% if loop.index < image.srcset|length %}, {% endif %}{% endfor %}"{% endif %}
			{% if image.position %} data-position="{{ image.position }}"{% endif %}>
	</picture>
{% endif %}
